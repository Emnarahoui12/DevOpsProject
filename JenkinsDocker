pipeline {
    agent any


    tools {
        maven '3.8.1'
    }


    stages {
       
        stage('Maven version') {
            steps {
                sh 'mvn --version'
            }
        }


       stage('Git fetch') {
            steps {
                git branch: 'mariem', 
				url: 'https://github.com/Emnarahoui12/DevOpsProject',
				credentialsId : 'ba06947d-89eb-47f2-9005-584063266420' 
            }
        }
		

        stage('BUILD') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
           
        }

  stage('DOCKER BUILD APP IMG STAGE'){
                steps{
                    script{
                        sh 'docker build -t devopsprojet .'
                    }
                   
                }
               
            }
       stage('DOCKER PUSH IMG STAGE '){
                steps{
                    script{
                        withCredentials([string(credentialsId: 'docker', variable: 'docker')]) {
                        sh 'docker login -u mariemabd -p ${docker}'
                             }
                        sh 'docker tag devopsprojet mariemabd/devopsprojet:latest'    
                        sh 'docker push mariemabd/devopsprojet'    
                    }
                   
                }
        }
            stage('DOCKER COMPOSE STAGE'){
                steps{
                    script{
                        sh 'docker-compose up'
                    }
                   
                }
               
            }
        }
       
         
       
    }